<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/v_top"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:background="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v1"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:background="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_top" />

        <View
            android:id="@+id/v2"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:background="@color/gray"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_top" />


        <View
            android:id="@+id/v4"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:background="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v1" />


        <View
            android:id="@+id/v1_botttom"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:background="@color/gray"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v4" />


        <View
            android:id="@+id/v2_botttom"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"

            android:background="@color/gray"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v2" />

        <View
            android:id="@+id/v3_botttom"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"

            android:background="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v1_botttom" />

        <View
            android:id="@+id/v5_botttom"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:background="@color/gray"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v1_botttom" />

        <View
            android:id="@+id/v4_botttom"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            app:layout_constraintLeft_toLeftOf="@id/v4"
            app:layout_constraintRight_toRightOf="@id/v4"
            app:layout_constraintTop_toBottomOf="@id/v4" />

        <View
            android:id="@+id/v_table"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:background="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v3_botttom" />

        <View
            android:id="@+id/v_t1"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"

            android:background="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_table" />

        <View
            android:id="@+id/v_t2"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:background="@color/gray"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_table" />

        <View
            android:id="@+id/v_t3"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"

            android:background="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_t1" />

        <View
            android:id="@+id/v_t4"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:background="@color/gray"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_t2" />

        <View
            android:id="@+id/v_t5"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"

            android:background="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_t3" />

        <View
            android:id="@+id/v_t6"
            android:layout_width="150dp"
            android:layout_height="15dp"
            android:layout_margin="5dp"
            android:background="@color/gray"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_t4" />

        <View
            android:id="@+id/v_status"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:background="@color/gray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_t5" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
